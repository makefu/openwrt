config system
	option hostname	adblockr
	option timezone	UTC
	option ttylogin	0

config timeserver ntp
	list server	0.openwrt.pool.ntp.org
	list server	1.openwrt.pool.ntp.org
	list server	2.openwrt.pool.ntp.org
	list server	3.openwrt.pool.ntp.org
	option enabled 1
	option enable_server 0

config 'led'
	option 'sysfs'		'gl-inet:red:adblock'
	option 'trigger'	'default-on'

config 'led'
	option 'sysfs'		'gl-inet:green:lan'
	option 'trigger'	'netdev'
	option 'dev'		'eth0'
	option 'mode'		'link'

config 'led'
	option 'sysfs'		'gl-inet:red:wlan'
	option 'trigger'	'netdev'
	option 'dev'		'adbnet'
	option 'mode'		'rx tx'

